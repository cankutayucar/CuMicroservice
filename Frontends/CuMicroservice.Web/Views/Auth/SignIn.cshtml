@{
    ViewData["Title"] = "SignIn";
}
@model CuMicroservice.Web.Models.SignInInput
<form asp-action="SignIn" asp-controller="Auth" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for=Email type="email" class="form-control">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input type="password" class="form-control" asp-for="Password">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" asp-for="IsRemember">
        <label class="form-check-label" asp-for="IsRemember"></label>
    </div>
    <button type="submit" class="btn btn-primary">Giriş yap</button>
</form>

